{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["dom", "es6"],
      "jsx": "react",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/@types/*"]
      },
      "types": ["chrome"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "outDir": "./dist"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
  }
  