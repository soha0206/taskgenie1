{
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
      "airbnb",
      "airbnb/hooks"
    ],
    {
        "env": {
          "browser": true,
          "node": true,
          "es2021": true
        },
        "parserOptions": {
          "ecmaVersion": 12,
          "sourceType": "module"
        },
        "rules": {
          "no-console": "warn",  // Warn when using console.log
          "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],  // Warn for unused vars
          "eqeqeq": "error",  // Enforce strict equality (===)
          "indent": ["error", 2],  // 2 spaces indentation
          "semi": ["error", "always"],  // Require semicolons
          "quotes": ["error", "single"],  // Use single quotes for strings
          "no-trailing-spaces": "error"  // Disallow trailing spaces
        }
      }
      
  }
  
  